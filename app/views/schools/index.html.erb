<h1>Listing schools</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Rank</th>
      <th>Location</th>
      <th>Introduction</th>
      <th>I student num</th>
      <th>Created time</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.school_type %></td>
        <td><%= school.rank %></td>
        <td><%= school.location %></td>
        <td><%= school.introduction %></td>
        <td><%= school.i_student_num %></td>
        <td><%= school.created_time %></td>
        <td><%= school.photo %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

